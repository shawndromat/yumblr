<div class="col-md-2">
  <input name="recipe[ingredient_entries_attributes][<%= entry.escape('rank') %>][rank]"
       type="hidden" value="<%= entry.escape('rank') %>">
    <input class="form-control"
         name="recipe[ingredient_entries_attributes][<%= entry.escape('rank') %>][amount]"
         type="number" min="0" max="1000" value="0">
</div>
<div class="col-md-2">
  <select class="form-control"
          name="recipe[ingredient_entries_attributes][<%= entry.escape('rank') %>][fraction]">
    <option>--</option>
    <option>1/8</option>
    <option>1/4</option>
    <option>1/3</option>
    <option>3/8</option>
    <option selected>1/2</option>
    <option>5/8</option>
    <option>2/3</option>
    <option>3/4</option>
    <option>7/8</option>
  </select>
</div>

<div class="col-md-2">
  <select class="form-control"
          name="recipe[ingredient_entries_attributes][<%= entry.escape('rank') %>][unit]">
    <option>cup</option>
    <option>tbsp</option>
    <option>tsp</option>
    <option>lb</option>
    <option>kg</option>
    <option>large</option>
    <option>medium</option>
    <option>small</option>
    <option>pinch</option>
    <option>bunch</option>
    <option>oz</option>
    <option>clove</option>
    <option>can</option>
    <option>g</option>
    <option>ml</option>
    <option>liter</option>
    <option>gallon</option>
    <option>pint</option>
    <option>head</option>
    <option>slice</option>
  </select>
</div>

<div class="col-md-6">
  <input placeholder="ingredient"
         class="form-control"
         name="recipe[ingredient_entries_attributes][<%= entry.escape('rank') %>][ingredient_name]">
</div>
