
<form>
<div class="recipe-header row">
  <div class="col-lg-12">
    <h2 class="recipe-title">
      <input class="form-control title-input"
             name="recipe[title]" value="Recipe Title">
    </h2>
  </div>
</div>

<div class="recipe-body row">
  <div class="col-lg-4">
    <div class="img-placeholder">
      <p><span class="glyphicon glyphicon-plus-sign"></span> Add a photo</p>
    </div>
  </div>

  <div class="col-lg-8">

    <h3>Ingredients</h3>
      <div id="ingredient-entries"></div>
      <div class=row>
        <div class="add-entry add-item">
          <span class="glyphicon glyphicon-plus-sign"></span>
        </div>
      </div>

    <h3>Directions</h3>
    <div id="recipe-steps"></div>
    <div class=row>
      <div class="add-step add-item col-lg-12">
        <span class="glyphicon glyphicon-plus-sign"></span>
      </div>
    </div>

    <div class="col-md-12">
      <input type="submit" id="submit"
             class="btn btn-info btn-lg pull-right" value="Submit Recipe">
    </div>
  </div>
</div>
</form>
