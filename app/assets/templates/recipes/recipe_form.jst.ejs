

<form class="form-horizontal col-lg-10 col-lg-offset-1">
  <div id="form-title" class="col-md-3">
    <h1 class="bubble">New Recipe</h1>
  </div>
  <div id="form-header" class="col-md-9">
    <div class="form-group">
        <input class="form-control title-input"
               placeholder="recipe title"
               name="recipe[title]" id="recipe_title">
    </div>

    <div class="form-group">
        <input class="form-control" id="recipe_photo_url"
               placeholder="photo url"
               name="recipe[photo_url]">
    </div>
  </div>

  <div class="col-md-3">
    <h3 class="bubble">Ingredients</h3>
  </div>

  <div class="col-md-9">
    <div id="new-ingredients"></div>
    <div class=row>
      <div class="add-entry add-item col-lg-12">
        <span class="glyphicon glyphicon-plus-sign"></span>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <h3 class="bubble">Directions</h3>
  </div>

  <div class="col-md-9">
    <div id="recipe-steps"></div>
    <div class=row>
      <div class="add-step add-item col-lg-12">
        <span class="glyphicon glyphicon-plus-sign"></span>
      </div>
    </div>
  </div>

    <div class="col-md-12">
      <input type="submit" id="submit"
             class="btn btn-info btn-lg pull-right" value="Submit Recipe">
    </div>
</div>
</form>
