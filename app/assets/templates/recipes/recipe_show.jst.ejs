<div class="recipe-header row">
  <div class="col-lg-10 col-lg-offset-1">
    <h2><%= recipe.escape('title') %></h2>
    <button class="edit-recipe btn btn-default">Edit</button>
  </div>
</div>

<div class="recipe-body row">
  <div class="col-lg-4 col-lg-offset-1">
    <div id="recipe-show-img">
      <img src="<%= recipe.escape('photo_url') %>" alt="<%= recipe.escape('title') %>" class="img-responsive" />
    </div>

    <div id="ingredient-entries"></div>
  </div>
  <div class="col-lg-6">
    <div id="recipe-steps-div">
      <ol id="recipe-steps"></ol>
    </div>
  </div>
</div>
