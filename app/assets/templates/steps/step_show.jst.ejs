<div class="col-md-1 col-md-offset-1">
  <div type="button" class="edit-step edit-button">
    <span class="glyphicon glyphicon-pencil"></span>
  </div>
</div>

<div class="col-md-1">
  <p><%= step.escape('rank') %>.</p>
</div>

<div class="col-md-7 step-body editable">
  <p><%= step.escape("body") %></p>
  <div class="step-icons row">
    <% if (step.escape("timer")) { %>
      <span class="glyphicon glyphicon-time show-timer"></span>
    <% } %>
    <% if (step.escape("video")) { %>
      <span class="glyphicon glyphicon-video show-video"></span>
    <% } %>
  </div>

  <div class="step-video-wrapper row"></div>
</div>

<div class="col-md-2 step-timer-wrapper"></div>
