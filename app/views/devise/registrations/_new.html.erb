<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
              html: {css: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
      <%= f.label :username, class: "control-label col-xs-3" %>
      <%= f.text_field :username, autofocus: true,
            class: "col-xs-3 form-control username-field", placeholder: "Username" %>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "control-label col-xs-3" %>
      <%= f.password_field :password, autocomplete: "off",
            class: "col-xs-3 form-control password-field", placeholder: "Password"  %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, class: "control-label col-xs-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
            class: "col-xs-3 form-control password-field", placeholder: "Password"  %>
    </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
