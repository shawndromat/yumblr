<!DOCTYPE html>
<html>
<head>
  <title>Yumblr</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.gif' %>
</head>
<body id="<%= yield :body_id %>">

  <% if current_user %>
  <%= render "layouts/header" %>
  <% end %>

  <% if flash[:errors] %>

    <div class="alert alert-warning">
      <ul>
        <% flash[:errors].each do |error| %>
        <% unless error = "Only the recipe owner can edit a recipe" %>
        <li><%= error %></li>
        <% end %>
        <% end %>
      </ul>
    </div>

  <% end %>

<%= yield %>


<%= yield :user_script %>
<%= yield :navigation %>
<%= yield :tour %>

</body>
</html>
